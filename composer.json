{
    "name": "gskema/elasticsearch-query-dsl-php",
    "type": "library",
    "description": "Feature complete, object oriented, composable, extendable ElasticSearch query DSL builder for PHP.",
    "keywords": [
        "elasticsearch",
        "query",
        "dsl"
    ],
    "homepage": "https://github.com/gskema/elasticsearch-query-dsl-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Gytis Å k",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "gskema/phpcs-type-sniff": "^81.3"
    },
    "require-dev": {
        "phpunit/phpunit" : "^10.4",
        "squizlabs/php_codesniffer": "^3.7",
        "scrutinizer/ocular": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Gskema\\ElasticSearchQueryDSL\\": "src/"
        },
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": { "Gskema\\ElasticSearchQueryDSL\\": "tests/" }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-clover=clover.xml",
        "test-coverage-local": "php -d xdebug.mode=coverage ./vendor/bin/phpunit --coverage-html=build/coverage",
        "upload-coverage": "vendor/bin/ocular code-coverage:upload --format=php-clover coverage.xml;",
        "style": "@composer prep && ./vendor/bin/phpcs --standard=phpcs.xml -p"
    },
    "config": {
        "sort-packages": true
    }
}
